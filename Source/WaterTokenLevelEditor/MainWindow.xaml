<Window x:Name="win_mainWindow" x:Class="WaterTokenLevelEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Water Token Level Editor" MinWidth="525" MinHeight="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="135" MinWidth="135"/>
            <ColumnDefinition Width="*" MinWidth="120" />
            <ColumnDefinition Width="200" MinWidth="200"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" MaxHeight="20" MinHeight="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="36" MaxHeight="36" MinHeight="36"/>
        </Grid.RowDefinitions>


        <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
        <!-- ||||||||||||||                                                          |||||||||||||| -->
        <!-- ||||||||||||||                        Main Menu                         |||||||||||||| -->
        <!-- ||||||||||||||                                                          |||||||||||||| -->
        <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->


        <Menu Grid.ColumnSpan ="3" Grid.Row="0" x:Name="men_mainMenu" Margin="0" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" BorderThickness="0,0,0,1" MaxHeight="20" MinHeight="20" Background="#FFF0F0F0">

            <MenuItem Header="_File" >
                <MenuItem Header="_New" Click="Menu_NewClick" />
                <Separator Padding="0" Margin="0,5"></Separator>
                <MenuItem Header="_Load" Click="Menu_LoadClick"/>
                <Separator Margin="0,5"></Separator>
                <MenuItem Header="_Save As" Click="Menu_SaveClick" />
                <Separator Margin="0,5"></Separator>
                <MenuItem Header="_Exit" Click="Menu_ExitClick" />
            </MenuItem>

            <MenuItem Header="_Layout">
                <MenuItem Header="_Grid Size" Click="Menu_GridSizeClick" />
            </MenuItem>

        </Menu>


        <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
        <!-- ||||||||||||||                                                          |||||||||||||| -->
        <!-- ||||||||||||||                     Game Object Column                   |||||||||||||| -->
        <!-- ||||||||||||||                                                          |||||||||||||| -->
        <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->


        <DockPanel x:Name="dck_gameObjects" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Panel.ZIndex="1">

            <Label Content="Game Objects" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Disabled" DockPanel.Dock="Top" Foreground="White" Background="#FF3399FF" />

            <ScrollViewer Margin="0,0,3,0" HorizontalContentAlignment="Stretch" DockPanel.Dock="Top" VerticalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <ItemsControl Cursor="Hand">

                    <Expander x:Name="exp_terrain" Header="Terrain" HorizontalContentAlignment="Stretch" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Stretch" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="#00000000" BorderThickness="0,0,0,0" Padding="5,5,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
                        <ItemsControl Tag="0">
                            <Label Content="Normal" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="0"/>
                            <Label Content="Sand" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="1"/>
                            <Label Content="Forest" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="2"/>
                            <Label Content="Mountain" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="3"/>
                            <Label Content="River" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="4"/>
                            <Label Content="Sea" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="5"/>
                            <Label Content="Bridge" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="6"/>
                            <Label Content="Village" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="7"/>
                            <Label Content="Throne" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="8"/>
                            <Label Content="Pillar" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="90"/>
                        </ItemsControl>
                    </Expander>

                    <Separator Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Margin="0,5,0,5" Padding="0" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" BorderThickness="0" />

                    <Expander x:Name="exp_interactive" Header="Interactive" HorizontalContentAlignment="Stretch" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Stretch" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="#00000000" BorderThickness="0,0,0,0" Padding="5,5,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Tag="1" >
                        <ItemsControl Tag="1">
                            <Label Content="Player Spawn" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="0"/>
                            <Label Content="Regen Point" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="1"/>
                            <Label Content="Treasure Chest" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="2"/>
                            <Label Content="Door" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="3"/>
                            <Label Content="Village" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="4"/>
                            <Label Content="Goal" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="5"/>
                            <Label Content="Boundary" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="6"/>
                        </ItemsControl>
                    </Expander>

                    <Separator Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Margin="0,5,0,5" Padding="0" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" BorderThickness="0" />

                    <Expander x:Name="exp_characters" Header="Characters" HorizontalContentAlignment="Stretch" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Stretch" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="#00000000" BorderThickness="0,0,0,0" Padding="5,5,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Margin="0,0,0,5" Tag="2" >
                        <ItemsControl Tag="2">
                            <Label Content="Boss" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="0"/>
                            <Label Content="Grunt" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="1"/>
                            <Label Content="NPC" Padding="30,3,0,3" MouseDoubleClick="Label_MouseDoubleClick" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" Margin="-5,0,0,0" Tag="2"/>
                        </ItemsControl>
                    </Expander>

                </ItemsControl>
            </ScrollViewer>

        </DockPanel>

        <GridSplitter Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" Width="3" ScrollViewer.VerticalScrollBarVisibility="Disabled" ResizeDirection="Columns" BorderThickness="0" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Panel.ZIndex="1"/>


        <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
        <!-- ||||||||||||||                                                          |||||||||||||| -->
        <!-- ||||||||||||||                        Level Column                      |||||||||||||| -->
        <!-- ||||||||||||||                                                          |||||||||||||| -->
        <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->

        <ScrollViewer Grid.Column="1" Grid.Row="1" Margin="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="#FF1E1E1E" >
            <Grid x:Name="grd_levelGrid" ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="0" ShowGridLines="True"/>
        </ScrollViewer>



        <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
        <!-- ||||||||||||||                                                          |||||||||||||| -->
        <!-- ||||||||||||||                      Properties Column                   |||||||||||||| -->
        <!-- ||||||||||||||                                                          |||||||||||||| -->
        <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->


        <DockPanel x:Name="dck_properties" Grid.Column="2" Grid.Row="1" LastChildFill="False" Margin="0" VerticalAlignment="Stretch" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Panel.ZIndex="1" >
            <Label Content="Properties" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Disabled" DockPanel.Dock="Top" Foreground="White" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>

            <ScrollViewer Margin="3,0,0,0" HorizontalContentAlignment="Stretch" DockPanel.Dock="Top" VerticalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto">
                <ItemsControl>

                    
                    <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
                    <!-- ||||||||||||||                                                          |||||||||||||| -->
                    <!-- ||||||||||||||                    Terrain properties                    |||||||||||||| -->
                    <!-- ||||||||||||||                                                          |||||||||||||| -->
                    <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->


                    <Expander x:Name="exp_terrainProp" Header="Terrain Layer" HorizontalContentAlignment="Stretch" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Stretch" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="#00000000" BorderThickness="0,0,0,0" Padding="5,5,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Margin="0" Tag="2" DockPanel.Dock="Top" IsEnabled="False" >
                        <ItemsControl HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="Sprite" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <TextBox x:Name="txt_terrainSprite" DockPanel.Dock="Top" Margin="5,0,10,0" ToolTip="Enter the relative file location here. If it's valid then the sprite will be displayed on the level grid, otherwise the value will be ignored." TextChanged="TextBox_SpriteBox" Tag="0"/>
                            </DockPanel>

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="Type" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <ComboBox x:Name="cmb_terrainType" Margin="5,0,10,0" VerticalAlignment="Center" SelectedIndex="0" VerticalContentAlignment="Center" DockPanel.Dock="Top" SelectionChanged="ComboBox_UpdateTerrain">
                                    <ComboBoxItem Content="Normal"/>
                                    <ComboBoxItem Content="Sand"/>
                                    <ComboBoxItem Content="Forest"/>
                                    <ComboBoxItem Content="Mountain"/>
                                    <ComboBoxItem Content="River"/>
                                    <ComboBoxItem Content="Sea"/>
                                    <ComboBoxItem Content="Bridge"/>
                                    <ComboBoxItem Content="Village"/>
                                    <ComboBoxItem Content="Throne"/>
                                    <ComboBoxItem Content="Pillar"/>
                                </ComboBox>
                            </DockPanel>

                            <Separator Margin="25,5,10,5" />

                            <Label Content="Bonuses" Margin="25, 0, 10, 5" Padding="0"/>

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="{ Binding ElementName=sdr_terrainDEF, Path=Value }" ContentStringFormat="DEF: {0}" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <Slider x:Name="sdr_terrainDEF" Margin="5,0,10,0" VerticalAlignment="Center" DockPanel.Dock="Top" Maximum="20" Minimum="0" LargeChange="3" SmallChange="1" Value="10" IsSnapToTickEnabled="True" ValueChanged="Slider_UpdateTerrain" ToolTip="How much extra defense is provided by the terrain." />
                            </DockPanel>

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="{ Binding ElementName=sdr_terrainRES, Path=Value }" ContentStringFormat="RES: {0}" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <Slider x:Name="sdr_terrainRES" Margin="5,0,10,0" VerticalAlignment="Center" DockPanel.Dock="Top" Maximum="20" Minimum="0" LargeChange="5" SmallChange="1" Value="10" IsSnapToTickEnabled="True" ValueChanged="Slider_UpdateTerrain" ToolTip="How much extra resistance is provided by the terrain." />
                            </DockPanel>

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="{ Binding ElementName=sdr_terrainEVA, Path=Value }" ContentStringFormat="EVA: {0}" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <Slider x:Name="sdr_terrainEVA" Margin="5,0,10,0" VerticalAlignment="Center" DockPanel.Dock="Top" Maximum="100" Minimum="0" LargeChange="10" SmallChange="1" Value="0" IsSnapToTickEnabled="True" ValueChanged="Slider_UpdateTerrain" ToolTip="How much extra evasion chance is provided by the terrain." />
                            </DockPanel>

                            <Separator Margin="25,5,10,5" />

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="{ Binding ElementName=sdr_terrainMOV, Path=Value }" ContentStringFormat="Cost: {0}" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <Slider x:Name="sdr_terrainMOV" Margin="5,0,10,0" VerticalAlignment="Center" DockPanel.Dock="Top" Maximum="10" Minimum="0" LargeChange="3" SmallChange="1" Value="5" IsSnapToTickEnabled="True" ValueChanged="Slider_UpdateTerrain" ToolTip="How many extra movement points are spent when moving on the terrain." />
                            </DockPanel>

                        </ItemsControl>
                    </Expander>

                    <Separator Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Margin="0,5,0,5" Padding="0" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" BorderThickness="0" DockPanel.Dock="Top" />


                    <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
                    <!-- ||||||||||||||                                                          |||||||||||||| -->
                    <!-- ||||||||||||||                  Interactive properties                  |||||||||||||| -->
                    <!-- ||||||||||||||                                                          |||||||||||||| -->
                    <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->


                    <Expander x:Name="exp_interProp" Header="Interactive Layer" HorizontalContentAlignment="Stretch" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Stretch" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="#00000000" BorderThickness="0,0,0,0" Padding="5,5,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Margin="0" Tag="2" DockPanel.Dock="Top" IsEnabled="False" >
                        <ItemsControl HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="Sprite" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <TextBox x:Name="txt_interSprite" DockPanel.Dock="Top" Margin="5,0,10,0" ToolTip="Enter the relative file location here. If it's valid then the sprite will be displayed on the level grid, otherwise the value will be ignored." TextChanged="TextBox_SpriteBox" Tag="1"/>
                            </DockPanel>

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="Type" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <ComboBox x:Name="cmb_interType" Margin="5,0,10,0" VerticalAlignment="Center" SelectedIndex="0" VerticalContentAlignment="Center" DockPanel.Dock="Top" SelectionChanged="ComboBox_UpdateInteractive">
                                    <ComboBoxItem Content="Player Spawn"/>
                                    <ComboBoxItem Content="Regen Point"/>
                                    <ComboBoxItem Content="Treasure"/>
                                    <ComboBoxItem Content="Door"/>
                                    <ComboBoxItem Content="Village"/>
                                    <ComboBoxItem Content="Goal"/>
                                    <ComboBoxItem Content="Boundary"/>
                                </ComboBox>
                            </DockPanel>

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="{ Binding ElementName=sdr_interEffect, Path=Value }" ContentStringFormat="Effect: {0}" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <Slider x:Name="sdr_interEffect" Margin="5,0,10,0" VerticalAlignment="Center" DockPanel.Dock="Top" Maximum="999" Minimum="0" LargeChange="100" SmallChange="1" Value="999" IsSnapToTickEnabled="True" ValueChanged="Slider_UpdateInteractive" ToolTip="This may not be used, it could be the scene ID of the village, item ID of the treasure or the HP recovered each turn from a Regen Point. It depends on the type." />
                            </DockPanel>

                        </ItemsControl>
                    </Expander>

                    <Separator Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Margin="0,5,0,5" Padding="0" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" BorderThickness="0" DockPanel.Dock="Top" />

                    <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
                    <!-- ||||||||||||||                                                          |||||||||||||| -->
                    <!-- ||||||||||||||                    Character properties                  |||||||||||||| -->
                    <!-- ||||||||||||||                                                          |||||||||||||| -->
                    <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->


                    <Expander x:Name="exp_charProp" Header="Character Layer" HorizontalContentAlignment="Stretch" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Stretch" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="#00000000" BorderThickness="0,0,0,0" Padding="5,5,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Margin="0,0,0,5" Tag="2" DockPanel.Dock="Top" IsEnabled="False" >
                        <ItemsControl HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="Sprite" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <TextBox x:Name="txt_charSprite" DockPanel.Dock="Top" Margin="5,0,10,0" ToolTip="Enter the relative file location here. If it's valid then the sprite will be displayed on the level grid." TextChanged="TextBox_SpriteBox" Tag="2"/>
                            </DockPanel>

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="Type" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <ComboBox x:Name="cmb_charType" Margin="5,0,10,0" VerticalAlignment="Center" SelectedIndex="0" VerticalContentAlignment="Center" DockPanel.Dock="Top" SelectionChanged="ComboBox_UpdateChar">
                                    <ComboBoxItem Content="Boss"/>
                                    <ComboBoxItem Content="Grunt"/>
                                    <ComboBoxItem Content="NPC"/>
                                </ComboBox>
                            </DockPanel>

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="Name" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55"/>
                                <TextBox x:Name="txt_charName" DockPanel.Dock="Top" Margin="5,0,10,0" TextChanged="TextBox_UpdateChar" Tag="2"/>
                            </DockPanel>

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="Class" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55"/>
                                <ComboBox x:Name="cmb_charClass" Margin="5,0,10,0" VerticalAlignment="Center" SelectedIndex="0" VerticalContentAlignment="Center" DockPanel.Dock="Top" SelectionChanged="ComboBox_UpdateChar">
                                    <ComboBoxItem Content="Ranger"/>
                                    <ComboBoxItem Content="Lord"/>
                                    <ComboBoxItem Content="Hero"/>
                                    <ComboBoxItem Content="Myrmidon"/>
                                    <ComboBoxItem Content="Swordmaster"/>
                                    <ComboBoxItem Content="Soldier"/>
                                    <ComboBoxItem Content="Fighter"/>
                                    <ComboBoxItem Content="Warrior"/>
                                    <ComboBoxItem Content="Archer"/>
                                    <ComboBoxItem Content="Sniper"/>
                                    <ComboBoxItem Content="Knight"/>
                                    <ComboBoxItem Content="General"/>
                                    <ComboBoxItem Content="Sword Knight"/>
                                    <ComboBoxItem Content="Lance Knight"/>
                                    <ComboBoxItem Content="Axe Knight"/>
                                    <ComboBoxItem Content="Bow Knight"/>
                                    <ComboBoxItem Content="Paladin"/>
                                    <ComboBoxItem Content="Pegasus Knight"/>
                                    <ComboBoxItem Content="Falcon Knight"/>
                                    <ComboBoxItem Content="Princess"/>
                                    <ComboBoxItem Content="Wyvern Rider"/>
                                    <ComboBoxItem Content="Wyvern Lord"/>
                                    <ComboBoxItem Content="King"/>
                                    <ComboBoxItem Content="Mage"/>
                                    <ComboBoxItem Content="Sage"/>
                                    <ComboBoxItem Content="Priest"/>
                                    <ComboBoxItem Content="Bishop"/>
                                    <ComboBoxItem Content="Cleric"/>
                                    <ComboBoxItem Content="Valkyrie"/>
                                    <ComboBoxItem Content="Thief"/>
                                    <ComboBoxItem Content="Assassin"/>
                                    <ComboBoxItem Content="Bandit"/>
                                    <ComboBoxItem Content="Berserker"/>
                                    <ComboBoxItem Content="Civilian"/>
                                    <ComboBoxItem Content="Child"/>
                                </ComboBox>
                            </DockPanel>

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="Affinity" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55"/>
                                <ComboBox x:Name="cmb_charAffinity" Margin="5,0,10,0" VerticalAlignment="Center" SelectedIndex="0" VerticalContentAlignment="Center" DockPanel.Dock="Top" SelectionChanged="ComboBox_UpdateChar">
                                    <ComboBoxItem Content="Anima"/>
                                    <ComboBoxItem Content="Dark"/>
                                    <ComboBoxItem Content="Fire"/>
                                    <ComboBoxItem Content="Ice"/>
                                    <ComboBoxItem Content="Light"/>
                                    <ComboBoxItem Content="Thunder"/>
                                    <ComboBoxItem Content="Wind"/>
                                    <ComboBoxItem Content="Water"/>
                                    <ComboBoxItem Content="Earth"/>
                                    <ComboBoxItem Content="Heaven"/>
                                </ComboBox>
                            </DockPanel>

                            <Separator Margin="25,5,10,5" />

                            <Label Content="Stats" Margin="25, 0, 10, 5" Padding="0"/>

                            <DockPanel Margin="25,0,0,5" LastChildFill="True">
                                <Label Content="{ Binding ElementName=sdr_charLevel, Path=Value }" ContentStringFormat="Level: {0}" Padding="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="55" MinWidth="55" MaxWidth="55"/>
                                <Slider x:Name="sdr_charLevel" Margin="5,0,10,0" VerticalAlignment="Center" DockPanel.Dock="Top" Maximum="20" Minimum="1" LargeChange="5" SmallChange="1" Value="10" IsSnapToTickEnabled="True" ValueChanged="Slider_UpdateChar" />
